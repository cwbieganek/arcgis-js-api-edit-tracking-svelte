{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
		"lib": ["ES2019", "DOM"],
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"jsxFactory": "tsx"
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
  "references": [{ "path": "./tsconfig.node.json" }]
}